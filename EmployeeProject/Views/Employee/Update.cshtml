@using EmployeeProject.ViewModels; 

@model EmployeeViewModel 


<form method="post" asp-controller="Employee" asp-action="Update">
	<div class="modal-header">
		<h4 class="modal-title">Edit Employee</h4>
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		@Html.HiddenFor(m => m.employeeDto.Id)

	</div>
	<div class="modal-body">
		<div class="form-group">
			<label asp-for="employeeDto.Name">Name</label>
			<input asp-for="employeeDto.Name" type="text" class="form-control" />
			@* @Html.TextBoxFor(m => m.employeeDto.Name) *@
			<span asp-validation-for="employeeDto.Name" class="text-danger"></span>
		</div>
		<div class="form-group">

			<label asp-for="employeeDto.HireDate">Hire Date</label>
			<input asp-for="employeeDto.HireDate" type="date" class="form-control" required>
			<span asp-validation-for="employeeDto.HireDate" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="employeeDto.BasicSalary">Basic Salary</label>
			<input asp-for="employeeDto.BasicSalary" type="number" class="form-control">
			<span asp-validation-for="employeeDto.BasicSalary" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="employeeDto.Allowance">Allowance</label>
			<input asp-for="employeeDto.Allowance" type="number" class="form-control">
			<span asp-validation-for="employeeDto.Allowance" class="text-danger"></span>
		</div>
	</div>
	<div class="modal-footer">
		<input type="button" class="btn btn-default" asp-controller="Employee" asp-action="Index">
		<input type="submit" class="btn btn-success" asp-action="Update" asp-controller="Employee">
	</div>
</form>
